<% provide(:title, @user.name) %>
<div class="container">
<div class="row">
<aside class="col-md-3">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <br/>
      <br/>
      <br/>
      <%= link_to "New Post", new_post_path, class: "btn btn-md btn-primary" %>
</aside>
<div class="col-md-9">
<% if @user.posts.any? %>
  <h3>Posts (<%= @user.posts.count %>)</h3>
  <ol class="microposts">
    <%= render @posts %>
  </ol>
  <%= will_paginate @posts %>
<% else %>
  <h3 style="color:#A0A0A0;">No Posts created</h3>
<% end %>
</div>
</div>
</div>