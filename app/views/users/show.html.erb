<% provide(:title, @user.name) %>
<div class="container">
<div class="row">
<aside class="col-md-3">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <%= form_for(@post) do |f| %>
  <div class="field">
    <%= f.text_area :content, placeholder: "Compose new post..." %>
  </div>
  <%= f.submit "Post", class: "btn btn-primary" %>
<% end %>

</aside>
<div class="col-md-9">
<% if @user.posts.any? %>
  <h3>Posts (<%= @user.posts.count %>)</h3>
  <ol class="microposts">
    <%= render @posts %>
  </ol>
  <%= will_paginate @posts %>
<% else %>
  <h3 style="color:#A0A0A0;">No Posts created</h3>
<% end %>
</div>
</div>
</div>